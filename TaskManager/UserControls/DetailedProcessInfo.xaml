<UserControl x:Class="TaskManager.UserControls.DetailedProcessInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskManager.UserControls"
             mc:Ignorable="d" d:DesignWidth="390" Height="290">
    <Grid>
        <Label Content="Basic Information" HorizontalAlignment="Left" VerticalAlignment="Top" Width="195" Height="25"/>
        <RichTextBox x:Name="basic" Margin="0,25,195,0">
        </RichTextBox>
        <Label Content="Modules" HorizontalAlignment="Right" VerticalAlignment="Top" Width="195" Height="25"/>
        <RichTextBox x:Name="modules" Margin="0,25,0,0" Width="195" Height="120" HorizontalAlignment="Right" VerticalAlignment="Top">
        </RichTextBox>
        <Label Content="Threads" HorizontalAlignment="Right" VerticalAlignment="Top" Width="195" Margin="0,145,0,0" Height="25"/>
        <RichTextBox x:Name="threads" Width="195" Height="120" HorizontalAlignment="Right" VerticalAlignment="Bottom">
        </RichTextBox>

    </Grid>
</UserControl>
