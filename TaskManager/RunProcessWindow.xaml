<Window x:Class="TaskManager.RunProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="Run Process" Height="200" Width="160">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="10,36,10,0" Text="{Binding Path=ProcessName, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="10,85,10,0" Text="{Binding Path=Timeout, Mode=TwoWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Timeout" HorizontalAlignment="Left" Margin="10,59,10,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Process Name" HorizontalAlignment="Left" Margin="10,10,10,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,108,10,0" VerticalAlignment="Top" Width="120" Click="RunProcess"/>
        <ProgressBar Name="ProgressBar" HorizontalAlignment="Left" Margin="10,133,10,0" VerticalAlignment="Top" Width="120" Height="20"/>
    </Grid>
</Window>
